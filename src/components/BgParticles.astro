<script>
  import { tsParticles } from "@tsparticles/engine";
  import { loadAll } from "@tsparticles/all";

  const options = {
    autoPlay: true,
     fullScreen: {
      zIndex: -2
    },
    fpsLimit: 60,
    interactivity: {
      events: {
        onClick: { enable: true, mode: "push" },
        
        resize: true,
      },
      modes: {
        push: { quantity: 4 },
        repulse: { distance: 200, duration: 0.4 },
      },
    },
    particles: {
      color: { value: "#fff" },
      move: {
        direction: "none",
        enable: true,
        outModes: "out",
        speed: 2,
        straight: false,
      },
      number: {
        density: {
          enable: true,
          area: 800,
        },
        value: 80,
      },
      opacity: {
        animation: {
          enable: true,
          speed: 0.05,
          sync: true,
          startValue: "max",
          count: 1,
          destroy: "min",
        },
        value: {
          min: 0,
          max: 0.5,
        },
      },
      shape: {
        type: "circle",
      },
      size: {
        value: { min: 1, max: 4 },
      },
    },
  };

   window.addEventListener("DOMContentLoaded", async () => {
    await loadAll(tsParticles);
    await tsParticles.load({id: "tsparticles", options: options});
  });
</script>

